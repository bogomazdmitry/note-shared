{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=note_shared;Username=notes;Password=notes"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "System": "Information",
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Debug" }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "ClientUrl": "",
  "IdentityServerSettings": {
    "AppId": "angular-app",
    "IdentityTokenLifetime": 1800,
    "AccessTokenLifetime": 1800,
    "AuthorizationCodeLifetime": 1800,
    "AbsoluteRefreshTokenLifetime": 259200,
    "SlidingRefreshTokenLifetime": 43200,
    "AllowedCorsOrigins": "*"
  }
}
